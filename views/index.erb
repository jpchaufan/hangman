<header>
	<h1>Hangman</h1>
</header>

<main>
	<img src="<%= @img %>">

	<p>
		<%= game.known_word.join(' ') %>
	</p>
	<p>
		<%= "Mistakes: #{game.mistakes} / 10" %><br/>
		<%= 'Guesses:<br/>' unless game.guesses.empty? %>
		<%= game.guesses.join(', ') %><br/>
		<span class="warning"><%= @msg %></span><br/>
	</p>
	<form method="POST" autocomplete="off">
		<input type="text" name="guess" id="guessField" />
		<input type="submit" value="Guess!" />
	</form><br/>
	<form method="POST">
		<input type="hidden" name="_method" value="PUT" />
		<button type="submit" name="new_game" >New Game</button>
	</form>
</main>





